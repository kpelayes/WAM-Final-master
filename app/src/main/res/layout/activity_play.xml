<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="karen.game.Play"
    android:clickable="false"
    android:background="#29722c"
    android:animateLayoutChanges="true"
    android:id="@+id/lay">

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:layout_marginTop="75dp"
        android:src="@drawable/molehill"
        android:clickable="true"
        android:onClick="incrementScore"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#29722c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:id="@+id/score"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#faf9f9" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/molehill"
        android:clickable="true"
        android:onClick="incrementScore"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:background="#29722c" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/molehill"
        android:clickable="true"
        android:onClick="incrementScore"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#29722c" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/molehill"
        android:clickable="true"
        android:onClick="incrementScore"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#29722c" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton5"
        android:src="@drawable/molehill"
        android:clickable="true"
        android:onClick="incrementScore"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_centerHorizontal="true"
        android:background="#29722c" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton6"
        android:src="@drawable/molehill"
        android:clickable="true"
        android:onClick="incrementScore"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#29722c" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton7"
        android:src="@drawable/molehill"
        android:clickable="true"
        android:onClick="incrementScore"
        android:layout_above="@+id/score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp"
        android:background="#29722c" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton8"
        android:src="@drawable/molehill"
        android:clickable="true"
        android:onClick="incrementScore"
        android:layout_alignBottom="@+id/imageButton7"
        android:layout_centerHorizontal="true"
        android:background="#29722c" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton9"
        android:src="@drawable/molehill"
        android:clickable="true"
        android:onClick="incrementScore"
        android:layout_alignTop="@+id/imageButton8"
        android:layout_alignLeft="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6"
        android:background="#29722c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0:45"
        android:id="@+id/timer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#faf9f9"
        android:textSize="30dp" />

</RelativeLayout>
